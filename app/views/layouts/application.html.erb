<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag 'application', media: 'all',
                                           'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <% if full_title(yield(:title)) != 'GeekChic Style Guide' %>
      <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Home", home_path %></li>
              <li><%= link_to "Blog", blog_path %></li>
              <li><%= link_to "Community", community_path %></li>
              <li><%= link_to "About", about_path %></li>
              <li><%= link_to "Shop", shop_path %></li>
              <li><%= link_to "Vlog", vlog_path %></li>
              <li><%= link_to "Submit", submit_path %></li>
            </ul>
          </nav>
         </div>
      </header>
      <div class="container">
        <%= yield %>
      </div>
    <% else %>
      <div class="container">
        <%= yield %>
      </div>
    <% end %>
  </body>
</html>